<body id = "bg">
<div id="particles-js">
  <div class="log-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 id = formHeader> Betflix Login</h2>
      <br>
      <div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email" %>
      </div>

      <div>
        <%= f.password_field :password, autocomplete: "current-password",placeholder:"Password" %>
      </div>

      <% if devise_mapping.rememberable? %>

      <% end %>


      <%= f.submit "Log in",class:"btn" %>
      <button type="submit" class="signup"><a href="<%= new_user_registration_path %>">Sign Up</a></button>
      <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
      </div>

    <% end %>
    <script type="text/javascript">
        particlesJS.load('particles.js', '/app/assets/javascripts/particles.js', function() {
            console.log('callback - particles.js config loaded');
        });
    </script>
    </div>
</body>

<script src="particles.js"></script>