
<div class="log-form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <h2 id = formHeader> Betflix Sign Up</h2>
  <%= render "devise/shared/error_messages", resource: resource %>
<form id="flog">
  <br>
  <div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" %>
  </div>

  <div >

    <%= f.password_field :password, autocomplete: "new-password", placeholder:"password (6 characters minimum)" %>
  </div>
  
  <div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"password Confirmed" %>
  </div>

  <div>
    <%= f.submit "Sign up", class:"btn"%>
  </div>
  </form>
  <script type="text/javascript">
      particlesJS.load('particles-js', '/public/particles.json', function() {
          console.log('callback - particles.js config loaded');
      });
  </script>
</div>
<% end %>


